<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="customer">
	<insert id="create" >
		insert into customer(name, phone, email) values(#{name}, #{phone}, #{email})
	</insert>
	<insert id="add" >
		insert into oath(phone, file_name) values(#{phone}, #{file_name})
	</insert>  
	<select id="list" resultType="com.escape.domain.CustomerVO">
		select * from customer
	</select>
	<select id="sign" resultType="com.escape.domain.CustomerVO">
		select file_name from oath where phone=#{phone}
	</select>
	<update id="update">
		update customer set comments=#{comments} where phone=#{phone}
	</update>
	<delete id="delete">
		delete from customer where phone=#{phone}
	</delete>
	
</mapper>